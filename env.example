# Trading System Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Trading mode: 'paper' or 'live'
TRADING_MODE=paper

# Server port
PORT=8000

# =============================================================================
# BYBIT API CONFIGURATION (for live trading)
# =============================================================================

# Bybit API credentials (create at https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET=your_bybit_secret_key_here
BYBIT_RECV_WINDOW=5000

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================

# Position sizing limits (as percentage of account)
MAX_POSITION_SIZE=0.1          # 10% max per position
MAX_TOTAL_EXPOSURE=0.5         # 50% max total exposure

# Leverage limits
MAX_LEVERAGE=10                # Maximum leverage allowed

# Stop-loss and take-profit defaults (as percentage)
DEFAULT_STOP_LOSS=0.02         # 2% default stop-loss
DEFAULT_TAKE_PROFIT=0.04       # 4% default take-profit

# Daily loss limits (as percentage of account)
MAX_DAILY_LOSS=0.05            # 5% max daily loss
MAX_DAILY_DRAWDOWN=0.1         # 10% max daily drawdown

# Margin requirements
MIN_MARGIN_LEVEL=1.5           # 150% minimum margin level

# Volatility limits
MAX_VOLATILITY=0.05            # 5% max hourly volatility

# Correlation limits
MAX_CORRELATED_EXPOSURE=0.3    # 30% max correlated exposure

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Performance thresholds
MAX_API_LATENCY=5000           # 5 seconds max API latency
MAX_MEMORY_USAGE=0.8           # 80% max memory usage
MAX_CPU_USAGE=0.9              # 90% max CPU usage

# Trading thresholds
MAX_ORDER_LATENCY=3000         # 3 seconds max order latency
MAX_SLIPPAGE=0.005             # 0.5% max slippage
MAX_FAILED_ORDERS=5            # 5 max failed orders

# System thresholds
MAX_ERROR_RATE=0.05            # 5% max error rate
MAX_CONCURRENT_CONNECTIONS=100 # 100 max concurrent connections

# Alert intervals
ALERT_COOLDOWN=300000          # 5 minutes alert cooldown

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://methtrader.xyz,https://www.methtrader.xyz

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# Admin API key for privileged operations
ADMIN_API_KEY=your_admin_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (if using database)
# =============================================================================

# Database URL (if using PostgreSQL, MongoDB, etc.)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Alpha Vantage API key (for market data)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Telegram bot token (for notifications)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment: development, staging, production
NODE_ENV=production

# Enable static file serving (for Railway)
SERVE_STATIC=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable autonomous trading
ENABLE_AUTONOMOUS_TRADING=false

# Enable real-time notifications
ENABLE_NOTIFICATIONS=true

# Enable detailed logging
ENABLE_DETAILED_LOGGING=true

# Enable performance monitoring
ENABLE_MONITORING=true

# Enable risk management
ENABLE_RISK_MANAGEMENT=true
