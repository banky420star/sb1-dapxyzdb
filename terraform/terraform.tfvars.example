# Oracle Cloud Infrastructure Terraform Variables
# Copy this file to terraform.tfvars and update with your actual values

# OCI Configuration
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaa..."
user_ocid        = "ocid1.user.oc1..aaaaaaaa..."
fingerprint      = "aa:bb:cc:dd:ee:ff:gg:hh:ii:jj:kk:ll:mm:nn:oo:pp"
private_key_path = "~/.oci/oci_api_key.pem"
region          = "us-ashburn-1"
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaa..."

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-ssh-public-key"

# Database Configuration
db_password = "your_secure_database_password_here"

# API Keys (Get these from your trading platforms)
bybit_api_key    = "your_bybit_api_key_here"
bybit_api_secret = "your_bybit_api_secret_here"
alpha_vantage_api_key = "your_alpha_vantage_api_key_here"

# Security Keys
jwt_secret     = "your_jwt_secret_key_here_minimum_32_characters"
encryption_key = "your_encryption_key_here_minimum_32_characters"

# Trading Configuration
trading_mode          = "paper"
confidence_threshold  = 0.60
max_drawdown_pct      = 0.15
per_symbol_usd_cap    = 10000

# Environment Configuration
environment  = "production"
project_name = "ai-trading"

# Tags
tags = {
  Project     = "AI Trading System"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "Your Name"
  CostCenter  = "Trading"
}