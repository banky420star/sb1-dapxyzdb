# AI Trading System - Production Configuration

# Server Configuration
NODE_ENV=production
PORT=8000
CORS_ORIGIN=http://YOUR-SERVER-IP:3000

# API Keys (Replace with your actual keys)
ALPHA_VANTAGE_API_KEY=YOUR_API_KEY_HERE
TWELVEDATA_API_KEY=YOUR_API_KEY_HERE

# Security Keys (Generate new ones for production)
JWT_SECRET=GENERATE_STRONG_SECRET_HERE
SESSION_SECRET=GENERATE_STRONG_SECRET_HERE

# Database
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/trading.db

# MT5 Connection
MT5_COMMAND_PORT=5555
MT5_DATA_PORT=5556
MT5_ACCOUNT_TYPE=demo

# Trading Configuration
POSITION_SIZE_LIMIT=0.01
MAX_POSITIONS=5
MAX_DAILY_LOSS=0.005
RISK_PER_TRADE=0.001
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.04

# ML Models
MODEL_UPDATE_INTERVAL=3600000
PREDICTION_CONFIDENCE_THRESHOLD=0.6
USE_ENSEMBLE=true

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs

# Paper Trading (Set to false for live trading)
PAPER_TRADING=true
PAPER_BALANCE=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Backtesting
BACKTEST_PERIOD_DAYS=30
BACKTEST_INITIAL_BALANCE=10000