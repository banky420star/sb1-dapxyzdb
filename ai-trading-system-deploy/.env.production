# Production Environment Configuration
NODE_ENV=production
PORT=8000
FRONTEND_PORT=3000

# Database
DB_PATH=./data/trading.db

# Trading Configuration - PRODUCTION SETTINGS
TRADING_MODE=live
ENABLE_LIVE_TRADING=true
POSITION_SIZE_LIMIT=0.01
MAX_DAILY_LOSS=0.005
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.04
MAX_POSITIONS=3
RISK_PER_TRADE=0.01

# MetaTrader 5 Integration
MT5_INTEGRATION=true
MT5_ACCOUNT_TYPE=demo
ZMQ_COMMAND_PORT=5555
ZMQ_DATA_PORT=5556
MT5_MAGIC_NUMBER=123456
MT5_TIMEOUT=5000

# Data Sources (REQUIRED - Add your API keys)
ALPHA_VANTAGE_API_KEY=1RK56LEJ7T4E4IA8
TWELVEDATA_API_KEY=your_twelvedata_key
ENABLE_LIVE_DATA=true
DATA_UPDATE_INTERVAL=1000

# Machine Learning
ML_MODEL_PATH=./models/
RETRAIN_INTERVAL=24
MIN_TRAINING_SAMPLES=1000
MODEL_VALIDATION_SPLIT=0.2

# Risk Management - STRICT PRODUCTION LIMITS
EMERGENCY_STOP_LOSS=0.05
CORRELATION_THRESHOLD=0.7
VOLATILITY_THRESHOLD=0.05
MAX_LEVERAGE=2.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trading.log
ENABLE_TRADING_LOG=true

# Security - PRODUCTION HARDENING
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-super-secret-session-key-change-this

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123

# SSL Configuration (optional)
SSL_ENABLED=false
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem