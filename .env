# Server Configuration
NODE_ENV=development
PORT=8000
FRONTEND_PORT=3000

# Database
DB_PATH=./data/trading.db

# Trading Configuration
TRADING_MODE=simulation
ENABLE_LIVE_TRADING=false
POSITION_SIZE_LIMIT=0.01
MAX_DAILY_LOSS=0.05
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.04
MAX_POSITIONS=5
RISK_PER_TRADE=0.01

# MetaTrader 5 Integration
MT5_INTEGRATION=true
MT5_ACCOUNT_TYPE=demo
ZMQ_COMMAND_PORT=5555
ZMQ_DATA_PORT=5556
MT5_MAGIC_NUMBER=123456
MT5_TIMEOUT=5000

# Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
TWELVEDATA_API_KEY=your_twelvedata_key
ENABLE_LIVE_DATA=true
DATA_UPDATE_INTERVAL=1000

# Machine Learning
ML_MODEL_PATH=./models/
RETRAIN_INTERVAL=24
MIN_TRAINING_SAMPLES=1000
MODEL_VALIDATION_SPLIT=0.2

# Risk Management
EMERGENCY_STOP_LOSS=0.10
CORRELATION_THRESHOLD=0.7
VOLATILITY_THRESHOLD=0.05
MAX_LEVERAGE=2.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trading.log
ENABLE_TRADING_LOG=true

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000