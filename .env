# ===== TRADING SYSTEM CONFIGURATION =====

# === Environment ===
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# === Security ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# === Trading Configuration ===
TRADING_MODE=paper
AUTO_TRADING=false
CONTINUOUS_LEARNING=true
MAX_DAILY_LOSS=0.02
MAX_POSITIONS=5
POSITION_SIZE_LIMIT=0.01

# === Data Sources API Keys ===
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Get free API key from: https://iexcloud.io/
IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# Polygon.io for real-time data (optional)
POLYGON_API_KEY=your_polygon_key_here

# === Broker API Keys (for live trading later) ===
# MetaTrader 5 / OANDA / Interactive Brokers
MT5_SERVER=your_mt5_server
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password

OANDA_API_KEY=your_oanda_api_key
OANDA_ACCOUNT_ID=your_oanda_account_id
OANDA_ENVIRONMENT=practice

# === Database Configuration ===
DATABASE_PATH=./data/trading_live.db
HISTORICAL_DATA_RETENTION_DAYS=365

# === ML Model Configuration ===
MODEL_RETRAIN_INTERVAL_HOURS=24
MIN_MODEL_ACCURACY=0.60
ENSEMBLE_CONFIDENCE_THRESHOLD=0.7

# === Risk Management ===
MAX_DRAWDOWN=0.15
KELLY_FRACTION_LIMIT=0.25
VOLATILITY_THRESHOLD=0.05
NEWS_BLACKOUT_MINUTES=5

# === Monitoring ===
METRICS_RETENTION_HOURS=168
ALERT_EMAIL=your_email@domain.com
WEBHOOK_URL=your_discord_or_slack_webhook

# === Features Flags ===
ENABLE_REAL_DATA=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_AUTO_SCALING=false