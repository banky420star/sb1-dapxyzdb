{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "types": ["vite/client", "node"]
  },
  "include": ["src", "server", "tests", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist"]
}