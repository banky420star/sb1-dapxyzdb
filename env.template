# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Database Configuration
POSTGRES_DB=trading
POSTGRES_USER=trading_app
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://trading_app:your_secure_password_here@db:5432/trading

# Redis Configuration
REDIS_URL=redis://redis:6379

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_SECRET=your_bybit_secret_here
BYBIT_TESTNET=true
BYBIT_DEMO=false

# Alpha Vantage API
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_use_strong_random_value

# Trading Configuration
TRADING_MODE=paper
CONFIDENCE_THRESHOLD=0.60
TARGET_ANN_VOL=0.12
MAX_DRAWDOWN_PCT=0.15
PER_SYMBOL_USD_CAP=10000

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000

# Model Configuration
MODEL_VERSION=dev
ENABLE_MODEL_TRAINING=true

# Rate Limiting
RATE_LIMIT_ALPHA_VANTAGE=5
RATE_LIMIT_BYBIT=100

# Monitoring (Optional)
GRAFANA_PASSWORD=admin_change_this

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
